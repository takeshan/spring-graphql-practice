type Game {
    id: ID!
    name: String!
    companyName: String
    kind: String
}

type Company {
    companyId: ID!
    name: String!
    games: [Game!]!
}

type Query {
    game(id: ID!): Game
    games: [Game!]!
    company(companyId: ID!): Company
    companies: [Company!]!
}

type Mutation {
    createCompany(name: String!): Company
    createGame(name: String!, companyName: String!, kind: String!): Game
}